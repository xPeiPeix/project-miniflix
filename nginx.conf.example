# Project Miniflix - Nginx 配置示例
# 将此文件复制到 /etc/nginx/sites-available/ 并根据您的环境修改

server {
    listen 80;
    server_name your-domain.com www.your-domain.com;  # 修改为您的域名
    
    # 网站根目录 - 修改为您的实际路径
    root /path/to/your/project-miniflix;
    index index.html index.htm;
    
    # 日志文件
    access_log /var/log/nginx/miniflix_access.log;
    error_log /var/log/nginx/miniflix_error.log;
    
    # 主页和播放器页面
    location / {
        try_files $uri $uri/ =404;
        add_header Cache-Control "public, max-age=3600";
    }
    
    # 静态资源缓存
    location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Vary "Accept-Encoding";
    }
    
    # HLS 视频文件
    location /hls_videos_optimized/ {
        add_header Cache-Control "public, max-age=86400";
        add_header 'Access-Control-Allow-Origin' '*';
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
        add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
        
        # M3U8 文件不缓存，确保播放列表实时更新
        location ~* \.m3u8$ {
            add_header Cache-Control "no-cache, no-store, must-revalidate";
            add_header Pragma "no-cache";
            add_header Expires "0";
        }
        
        # TS 文件可以长时间缓存
        location ~* \.ts$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }
    
    # 视频缩略图
    location /thumbnails/ {
        expires 1w;
        add_header Cache-Control "public";
    }
    
    # videos.json 数据文件
    location /videos.json {
        add_header Content-Type "application/json; charset=utf-8";
        add_header Cache-Control "public, max-age=3600";
        add_header 'Access-Control-Allow-Origin' '*';
    }
    
    # HLS.js 库文件
    location /lib/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # 压缩设置
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/javascript
        application/json
        application/xml+rss
        application/atom+xml
        image/svg+xml;
    
    # 安全头部
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'" always;
    
    # 禁止访问敏感文件
    location ~ /\. {
        deny all;
    }
    
    location ~ \.(env|log|bak)$ {
        deny all;
    }
}

